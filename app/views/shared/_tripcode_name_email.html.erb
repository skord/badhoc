<% if post.active_ban?%>
<strong class='<%= 'authenticated ' if post.tripcoded? %> quiet'>
	<%= post.name %><%= " - User Banned: #{post.active_ban.reason}" %>
</strong>
<% elsif post.email.empty? || post.email == 'noko' || post.email == 'sage' %>
	<strong class='<%= 'authenticated ' if post.tripcoded? %>'>
		<%= post.name %>
	</strong>
<% else %>
	<strong class='<%= ' authenticated ' if post.tripcoded? %>'>
		<%= mail_to post.email, post.name, :encode => 'javascript' %>
	</strong>
<% end %>
