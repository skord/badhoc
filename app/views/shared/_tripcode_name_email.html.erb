<% if post.tripcoded? %>
	<% if post.email.empty? || post.email == 'noko' || post.email == 'sage' %>
		<strong class='authenticated'>
			<%= post.name %>
		</strong>
	<% else %>
		<strong class='authenticated'>
			<%= mail_to post.email, post.name, :encode => 'javascript' %>
		</strong>
	<% end %>
<% else %>
	<strong>
		<%= post.name %>
	</strong>
<% end %>