
<%= javascript_tag :data => 'data' do -%>
var data =
[
<% @picwalls.each do |picwall|%>
	{
		title:	'<%= picwall.name %>',
		desc:		'<%= picwall.name %>',
		link:		'<%= picwall.postpic.url %>',
		image:	'<%= picwall.postpic.url(:small) %>',
		date:		'<%= picwall.created_at %>'
	},
	<% end %>
	];
