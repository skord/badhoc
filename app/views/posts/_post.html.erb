<div class='post prepend-1 append-1 span-22 last'>

	<div class='postpic span-6'>
		<% if post.postpic? %>
			<%= link_to(image_tag(post.postpic.url(:small)),post.postpic.url, :class => 'postpic', :target => "_blank") %>
		<% else %>
			<p>None</p>
		<% end %>
		<div class='post-comment-thumbs'>
			<% for comment in post.comments.reverse[0..8] %>
				<% if comment.commentpic? %>
					<%= link_to(image_tag(comment.commentpic.url(:thumb)), comment.commentpic.url, :target => '_blank')%>
				<% end %>
			<% end %>
		</div>
	</div>
	<div class='post-info span-16 last'>
		<%= render :partial => 'shared/tripcode_name_email', :locals => {:post => post}%>
		<dfn><%= post.subject %></dfn>
		<em><%= post.created_at %></em>
		<br />
		Post: <%= post.id %>
		<%= link_to('Show/Reply', post) if controller.action_name == 'index'%>
		<%= link_to "Picwall", picwall_path(post)%>
		<div id='admin' class='admin' style='display:none;'>
			<p>
				Admin Functions: 
				<%= link_to 'Edit', edit_board_post_path(post.board, post) %>
				<%= link_to 'Destroy', board_post_path(post.board, post), :confirm => 'Are you sure?', :method => :delete %>
				<% unless post.locked? %>
					<%= link_to("Lock", post_lock_path(post), :method => :post) %>
				<% else %>
					<%= link_to("Unlock", post_unlock_path(post), :method => :post) %>
				<% end %>
				<br />
			</p>
		</div>
		<br />
		<% if post.locked? %>
			<dfn>Post Locked by Administrator</dfn>
		<% end %>
		<% if controller.action_name == 'index'%>
			<div class='<%= 'locked quiet' if post.locked? %>'>
				<%= user_text_markdown(post.message, 500)%>
			</div>
		<% else %>
			<div class='<%= 'locked quiet' if post.locked? %>'>
				<%= user_text_markdown(post.message)%>
			</div>
		<% end %>
		<br />
		<em><%= pluralize post.comments_count, 'comment' %>...</em>
		<br />
		<% if controller.action_name == "index"%>
			<table>
			<% post.comments.reverse[0..8].each do |comment| %>
				<tr>
					<td><%= render :partial => 'shared/tripcode_name_email', :locals => {:post => comment}%></td>
					<td><%= time_ago_in_words(comment.created_at) %> ago</td>
					<td><%= strip_tags user_text_markdown(comment.message,40) %></td>
				</tr>
			<% end %>
			</table>
		<% end %>
	</div>
</div>
