<div class='span-24'>
	<%= auto_discovery_link_tag(:atom, "/posts/#{@post.id}.atom", {:title => 'Posts Atom'}) %>
	<% if @post.locked?%>
		<div class='prepend-18 last'><em>Thread Locked - Comment Limit</em></div>
	<% else %>
		<div class='pagination prepend-20 last'>
			<%= link_to_function 'New Comment', "$('#new_comment_form').toggle();"%>
			<%= link_to('Edit', edit_board_post_path(@post.board, @post), :class => 'admin', :style => 'display:none;') %>
		</div>
	<% end %>
	<div id="new_comment_form" style="display:none;">
		<%= render 'comments/form'%>
	</div>
	<% cache @post do %>
		<%= render @post %>
	<% end %>
	<% cache @post.comments do %>
		<%= render @post.comments.order('updated_at DESC') %>
	<% end %>
</div>