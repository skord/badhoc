$("#<%= dom_id(@post) %> .post_admin_bar").html('<%= escape_javascript(render(:partial => 'post_admin_bar', :locals => {:post => @post})) %>');
$(".post_admin_bar").show();
$("div#post_<%= @post.id %>.post div.post-info em abbr.timeago").after(' <img alt="Note" class="sticky_post" height="16" src="/images/icons/note.png" title="Sticky Post" width="16">');

$(document).ready(function () {
	$('img.stick').click(function() {
		$.post($(this).parent()[0] + '.js');
		return false;
	});
});

$(document).ready(function () {
	$('img.unstick').click(function() {
		$.post($(this).parent()[0] + '.js');
		return false;
	});
});