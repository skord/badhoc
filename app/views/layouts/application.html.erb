<!DOCTYPE html>
<html>
	<head>
	  <title>Badhoc</title>
		<%= stylesheet_link_tag  'pagination', 'post', 'comment', 'blueprint/screen', 'site' %>
	  <%= javascript_include_tag :defaults %>
	  <%= csrf_meta_tag %>

	</head>
	<body>
		<div class='container'>
			<%= render :partial => 'shared/thumbbar'%>
			<div class='span-24 last'>
				<% if notice %>
					<div class="notice"><%= notice %></div>
				<% end %>
				<% if alert %>
			  	<div class="alert"><%= alert %></div>
				<% end %>
			</div>

			<%= render :partial => 'shared/admin_box'%>
	
			<div class='content'>
				<%= yield %>	
			</div>
	
		</div>
	</body>
</html>
