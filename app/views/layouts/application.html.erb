<!DOCTYPE html>
<html>
	<head>
	  <title>Badhoc</title>
		<%= stylesheet_link_tag 'pagination', 'post', 'comment', 'blueprint/screen', :cache => true %>
	  <%= javascript_include_tag :defaults, :cache => true %>
	  <%= csrf_meta_tag %>

	</head>
	<body>
		<div class='container'>
			<%= link_to 'BBS View', posts_path %>
			<%= link_to 'Pic Wall View', picwalls_path %>
			<br />
			<% if notice %>
				<div class="notice"><%= notice %></div>
			<% end %>
			<% if alert %>
		  	<div class="alert"><%= alert %></div>
			<% end %>

			<%= render :partial => 'layouts/admin_box'%>

			<%= yield %>	
		</div>
	</body>
</html>
