<% unless @comments.empty? %>
// Update the thumbnails from the _post partial
var b = "<%= escape_javascript(raw render :partial => 'posts/post_comment_thumbs', :locals => {:post => @post})%>";
$('div#<%= dom_id(@post)%>.post .post-comment-thumbs').css('opacity',0);
$('div#<%= dom_id(@post)%>.post .post-comment-thumbs').replaceWith($(b));
$('div#<%= dom_id(@post)%>.post .post-comment-thumbs').animate({opacity:1}, 1000);

// Render our new comments
var a = "<%= escape_javascript(raw render :partial => 'comments/comments' )%>";
$(a).css('opacity',0).prependTo("#comments");
$('.comment').animate({opacity:1}, 1000);

// Update Posts count
$('#post_comments_count').text($('#comments .comment').length + ' comments');

// Restore admin functions
<% if current_admin %>
	$(".admin").show();
<% end %>
<% end %>