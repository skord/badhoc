<%= semantic_form_for([@comment.post, @comment], :html => {:multipart => true}) do |f| %>
	<% f.inputs "Comment" do %>
	  <%= f.input :name %>
	  <%= f.input :email, :as => :string %>
	  <%= f.input :subject %>
	  <%= f.input :message %>
		<%= f.input :commentpic, :hint => 'Max 5Mb. jpg/png/gif accepted' %>
	<% end %>
	<%= f.buttons %>
<% end %>
